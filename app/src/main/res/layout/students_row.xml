<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="14dp"
    android:background="@drawable/students_row_bg"
    android:layout_width="match_parent"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_last_name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@+id/tv_last_name"
        android:id="@+id/tv_first_name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_last_name"
        android:id="@+id/tv_email"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <ImageButton
        android:layout_toLeftOf="@+id/img_btn_close"
        android:id="@+id/img_btn_edit"
        android:src="@drawable/edit_icon"
        android:layout_centerInParent="true"
        android:layout_marginEnd="3dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/my_primary">

    </ImageButton>

    <ImageButton
        android:id="@+id/img_btn_close"
        android:src="@drawable/close_icon"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/my_primary">

    </ImageButton>

</RelativeLayout>